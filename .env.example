# Mapbox API Key (get from https://www.mapbox.com/)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# OpenRouteService API Key (get from https://openrouteservice.org/)
NEXT_PUBLIC_ORS_API_KEY=your_ors_api_key_here

# Valhalla Isochrone (optional, for self-hosted Valhalla or a hosted endpoint)
# Set VALHALLA_API_URL to the base URL (we'll call `${VALHALLA_API_URL}/isochrone`)
# Example: http://localhost:8002  (self-hosted) or https://your-valhalla-host
VALHALLA_API_URL=
# Optional: allow client-side fallback if set (non-secret)
NEXT_PUBLIC_VALHALLA_URL=
# Optional: if your Valhalla endpoint requires a key (sent as a query param)
VALHALLA_API_KEY=
VALHALLA_API_KEY_PARAM=api_key

# AI API Keys (for AI caption generation and effects)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here

# HuggingFace (FREE credits with Pro! $2/month credit)
HF_TOKEN=your_huggingface_token_here
HUGGINGFACE_API_KEY=your_huggingface_token_here
HF_CAPTION_MODEL_ID=Qwen/Qwen2.5-72B-Instruct
HF_IMAGE_MODEL_ID=black-forest-labs/FLUX.1-schnell
# Optional: control Gemini image usage in dev
MAX_DAILY_GEMINI_IMAGE_REQUESTS=2
GEMINI_IMAGE_MODEL_ID=gemini-3-pro-image-preview
# Optional: Gemini captions model (text)
GEMINI_TEXT_MODEL_ID=gemini-2.0-flash

# Optional: choose cheaper caption models
OPENAI_CAPTION_MODEL_ID=gpt-4o-mini
ANTHROPIC_CAPTION_MODEL_ID=claude-3-haiku-20240307

# Stripe Payment Keys (for commercial licenses and orders)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# Google Analytics 4 (for usage analytics)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_WATERMARK=true

# Optional: Support Links
NEXT_PUBLIC_BMC_USERNAME=your_username
NEXT_PUBLIC_GITHUB_SPONSORS=your_github_username
NEXT_PUBLIC_GPAY_QR_URL=your_gpay_qr_url

# Optional: Backend proxy server (for self-hosted services / fallbacks)
# Used by /api/isochrone/backend and /api/geocode/backend routes.
BACKEND_API_URL=

# Commercial License Pricing (in INR)
PERSONAL_LICENSE_PRICE=499
COMMERCIAL_LICENSE_PRICE=2999
ENTERPRISE_LICENSE_PRICE=9999
