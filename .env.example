# Mapbox API Key (get from https://www.mapbox.com/)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# OpenRouteService API Key (get from https://openrouteservice.org/)
NEXT_PUBLIC_ORS_API_KEY=your_ors_api_key_here

# AI API Keys (for AI caption generation and effects)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Stripe Payment Keys (for commercial licenses and orders)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_WATERMARK=true

# Optional: Support Links
NEXT_PUBLIC_BMC_USERNAME=your_username
NEXT_PUBLIC_GITHUB_SPONSORS=your_github_username
NEXT_PUBLIC_GPAY_QR_URL=your_gpay_qr_url

# Commercial License Pricing (in INR)
PERSONAL_LICENSE_PRICE=499
COMMERCIAL_LICENSE_PRICE=2999
ENTERPRISE_LICENSE_PRICE=9999
