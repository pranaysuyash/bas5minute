    "express": "^5.2.1",
    "framer-motion": "^11.0.0",
    "html-to-image": "^1.11.11",
    "mapbox-gl": "^3.3.0",
    "maplibre-gl": "^4.7.1",
    "next": "^15.1.0",
    "openai": "^4.28.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-map-gl": "^7.1.7",
