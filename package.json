{
  "name": "bas5minute",
  "version": "1.0.0",
  "description": "India's most optimistic unit of time - visualized",
  "private": true,
  "scripts": {
    "dev": "PORT=5111 next dev",
    "dev:clean": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true});\" && PORT=5111 next dev",
    "dev:reset": "sh -c \"PID=$(lsof -ti tcp:5111 2>/dev/null || true); if [ -n \\\"$PID\\\" ]; then kill $PID || true; fi; rm -rf .next; PORT=5111 next dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
